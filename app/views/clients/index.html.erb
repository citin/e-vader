<p id="notice"><%= notice %></p>

<h1>Listado de Clientes</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha de nacimiento</th>
      <th>Género</th>
      <th>Documento Único</th>
      <th>Cuit/Cuil</th>
      <th>Opciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.surname %></td>
        <td><%= client.birthdate %></td>
        <td><%= client.gender %></td>
        <td><%= client.du %></td>
        <td><%= client.cui %></td>
        <td>
          <%= link_to 'Ver', client, :class=>"btn btn-primary" %>
          <%= link_to 'Editar', edit_client_path(client) , :class=>"btn btn-primary"%>
          <%= link_to 'Borrar', client, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cliente', new_client_path , :class=>"btn btn-primary" %>
