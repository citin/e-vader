<p id="notice"><%= notice %></p>

<h1>Listado de Personas</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cuit/l</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.cui %></td>
        <td>
          <%= link_to 'Ver', person, :class=>"btn btn-primary" %>
          <%= link_to 'Editar', edit_person_path(person), :class=>"btn btn-primary"%>
          <%= link_to 'Eliminar', person, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Persona', new_person_path , :class=>"btn btn-primary"  %>
